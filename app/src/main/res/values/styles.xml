<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.Pomotiva.TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/ti_box_stroke</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="hintTextColor">@color/ti_hint_color</item>
        <item name="boxBackgroundMode">outline</item>
    </style>

    <!-- Botões do diálogo com padrão Pomotiva: roxo com texto branco e fonte Poppins -->
    <style name="Widget.Pomotiva.Button.Dialog" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="backgroundTint">@color/pomotiva_secondary</item>
        <item name="android:textColor">@color/white</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <!-- Tipografia do diálogo -->
    <style name="TextAppearance.Pomotiva.Dialog.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>
    <style name="TextAppearance.Pomotiva.Dialog.Body" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <!-- Overlay para MaterialAlertDialog com identidade Pomotiva -->
    <style name="ThemeOverlay.Pomotiva.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- Cores básicas -->
        <item name="colorPrimary">@color/pomotiva_secondary</item>
        <!-- Tipografia -->
        <item name="materialAlertDialogTitleTextStyle">@style/TextAppearance.Pomotiva.Dialog.Title</item>
        <item name="materialAlertDialogBodyTextStyle">@style/TextAppearance.Pomotiva.Dialog.Body</item>
    </style>
</resources>

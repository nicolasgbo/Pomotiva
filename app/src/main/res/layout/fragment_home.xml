<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    

    <TextView
        android:id="@+id/text_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:visibility="gone"
        android:textStyle="bold"
        android:textSize="18sp"
        app:fontFamily="@font/poppins_semibold"
        android:fontFamily="@font/poppins_semibold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Abas de modo: Foco, Pausa curta, Pausa longa -->

    <!-- Custom progress arc above the timer circle -->

    <!-- Mantido para compatibilidade com o código, mas escondido -->
    <TextView
        android:id="@+id/text_cycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ciclo: 0"
        android:textSize="14sp"
        android:visibility="gone"
        app:fontFamily="@font/poppins_semibold"
        android:fontFamily="@font/poppins_semibold"
        app:layout_constraintTop_toBottomOf="@id/timer_circle_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:id="@+id/controls_row"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_current_session"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btn_start_pause"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_pomodoro_button_purple"
            android:elevation="6dp"
            android:fontFamily="@font/poppins_semibold"
            android:letterSpacing="0.05"
            android:text="COMEÇAR"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:fontFamily="@font/poppins_semibold" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Next"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mode_tabs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="24dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/timer_circle_container"
        app:layout_constraintVertical_chainStyle="packed">

        <!-- Foco (roxo) -->
        <LinearLayout
            android:id="@+id/tab_focus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:id="@+id/text_tab_focus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Foco"
                    android:textColor="@color/pomotiva_secondary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:fontFamily="@font/poppins_semibold" />
                <View
                    android:id="@+id/underline_focus"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="6dp"
                    android:background="@color/pomotiva_secondary"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <!-- Pausa curta (verde) -->
        <LinearLayout
            android:id="@+id/tab_short"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:id="@+id/text_tab_short"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Pausa curta"
                    android:textColor="@color/pomotiva_secondary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:fontFamily="@font/poppins_semibold" />
                <View
                    android:id="@+id/underline_short"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="6dp"
                    android:background="@color/pomotiva_secondary"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>

        <!-- Pausa longa (verde) -->
        <LinearLayout
            android:id="@+id/tab_long"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:id="@+id/text_tab_long"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Pausa longa"
                    android:textColor="@color/pomotiva_secondary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:fontFamily="@font/poppins_semibold" />
                <View
                    android:id="@+id/underline_long"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="6dp"
                    android:background="@color/pomotiva_secondary"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/timer_circle_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:background="@drawable/bg_pomodoro_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mode_tabs"
        app:layout_constraintBottom_toTopOf="@id/text_daily_cycles">

        <com.ifpr.androidapptemplate.ui.pomodoro.ProgressArcView
            android:id="@+id/pomoProgress"
            android:layout_width="256dp"
            android:layout_height="256dp"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/text_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_semibold"
            android:letterSpacing="0.05"
            android:text="25:00"
            android:textColor="@color/white"
            android:textSize="48sp"
            android:textStyle="bold"
            app:fontFamily="@font/poppins_semibold" />

    </FrameLayout>

    <!-- Seção de ciclos diários (numérico) -->
    <TextView
        android:id="@+id/text_daily_cycles"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="Ciclos diários: 0"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/pomotiva_secondary"
        android:fontFamily="@font/poppins_semibold"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/timer_circle_container"
        app:layout_constraintBottom_toTopOf="@id/text_current_session"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Sessão atual -->
    <TextView
        android:id="@+id/text_current_session"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="Sessão atual: Foco"
        android:textSize="14sp"
        android:textColor="@color/pomotiva_secondary"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_semibold"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/text_daily_cycles"
        app:layout_constraintBottom_toTopOf="@id/controls_row"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    

    <LinearLayout
        android:id="@+id/mode_row"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/controls_row"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">

        <Button
            android:id="@+id/btn_work"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Focus"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btn_short_break"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Short"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btn_long_break"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Long"
            android:visibility="gone"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.estatistica.EstatisticaFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollRoot"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:paddingTop="?attr/actionBarSize"
        android:paddingBottom="?attr/actionBarSize"
        android:clipToPadding="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/contentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:paddingTop="@dimen/content_inset_extra"
            android:paddingBottom="@dimen/content_inset_extra">

            <!-- Título -->
            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:text="@string/estat_header_title"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_semibold"/>

            <!-- Seletor de período -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupPeriodo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:singleSelection="true"
                app:selectionRequired="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipHoje"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:text="@string/period_today"
                    app:chipBackgroundColor="@color/chip_bg_estatistica"
                    android:textColor="@color/chip_text_estatistica"
                    app:chipStrokeColor="@color/chip_stroke_estatistica"
                    app:chipStrokeWidth="2dp"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipSemana"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:text="@string/period_week"
                    app:chipBackgroundColor="@color/chip_bg_estatistica"
                    android:textColor="@color/chip_text_estatistica"
                    app:chipStrokeColor="@color/chip_stroke_estatistica"
                    app:chipStrokeWidth="2dp"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipMes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:text="@string/period_month"
                    app:chipBackgroundColor="@color/chip_bg_estatistica"
                    android:textColor="@color/chip_text_estatistica"
                    app:chipStrokeColor="@color/chip_stroke_estatistica"
                    app:chipStrokeWidth="2dp"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipAno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:text="@string/period_year"
                    app:chipBackgroundColor="@color/chip_bg_estatistica"
                    android:textColor="@color/chip_text_estatistica"
                    app:chipStrokeColor="@color/chip_stroke_estatistica"
                    app:chipStrokeWidth="2dp"/>
            </com.google.android.material.chip.ChipGroup>

            <!-- KPIs -->
            <LinearLayout
                android:id="@+id/kpiRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardKpiTempo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    app:cardElevation="1dp"
                    app:strokeColor="@color/pomotiva_secondary"
                    app:strokeWidth="1dp"
                    app:cardUseCompatPadding="true"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/tvKpiTempoLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/kpi_focus_time"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"/>

                        <TextView
                            android:id="@+id/tvKpiTempoValor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="320 min"
                            android:textSize="18sp"
                            android:fontFamily="@font/poppins_semibold"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardKpiSessoes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    app:cardElevation="1dp"
                    app:strokeColor="@color/pomotiva_secondary"
                    app:strokeWidth="1dp"
                    app:cardUseCompatPadding="true"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/tvKpiSessoesLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/kpi_sessions"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"/>

                        <TextView
                            android:id="@+id/tvKpiSessoesValor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6"
                            android:textSize="18sp"
                            android:fontFamily="@font/poppins_semibold"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardKpiTaxa"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardElevation="1dp"
                    app:strokeColor="@color/pomotiva_secondary"
                    app:strokeWidth="1dp"
                    app:cardUseCompatPadding="true"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/tvKpiTaxaLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/kpi_completion"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"/>

                        <TextView
                            android:id="@+id/tvKpiTaxaValor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="85%"
                            android:textSize="18sp"
                            android:fontFamily="@font/poppins_semibold"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Título do gráfico -->
            <TextView
                android:id="@+id/tvChartTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/estat_chart_title"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_semibold"/>

            <!-- Gráfico de barras -->
            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/chartPrincipal"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginTop="8dp" />

            <!-- Metas -->
            <TextView
                android:id="@+id/tvMetasTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/estat_metas_title"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_semibold"/>

            <LinearLayout
                android:id="@+id/metasContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">

                <!-- Meta 1 (mock) -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardMeta1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:cardElevation="1dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/tvMeta1Titulo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tempo focado semanal"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_semibold"/>

                        <TextView
                            android:id="@+id/tvMeta1Valores"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="480/600 min  •  Falta 120 min"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="4dp"/>

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/progressMeta1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            app:indicatorColor="@color/pomotiva_secondary"
                            app:trackColor="@color/purple_200"
                            app:trackThickness="6dp"
                            app:indicatorDirectionLinear="leftToRight"
                            app:showAnimationBehavior="inward"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Meta 2 (mock) -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardMeta2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="1dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/tvMeta2Titulo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sessões por mês"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_semibold"/>

                        <TextView
                            android:id="@+id/tvMeta2Valores"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="22/30 sessões  •  Falta 8"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="4dp"/>

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/progressMeta2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            app:indicatorColor="@color/pomotiva_secondary"
                            app:trackColor="@color/purple_200"
                            app:trackThickness="6dp"
                            app:indicatorDirectionLinear="leftToRight"
                            app:showAnimationBehavior="inward"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
            
            <!-- Espaçador para manter folga acima da BottomNavigation -->
            <View
                android:id="@+id/bottomSpacer"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
